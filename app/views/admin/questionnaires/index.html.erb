<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="question-form-title"><center>Questionnaire List</center></div>
  </div>
  <div class="col-md-1"></div>
</div>
<br/><br/>
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @questionnaires.each_with_index do | questionnaire, index | %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= questionnaire.name %></td>
        <td><%= questionnaire.questionnaire_category.name %></td>
        <td>
          <%= link_to admin_questionnaire_path(questionnaire) do %>
            <i class="fas fa-eye" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_admin_questionnaire_path(questionnaire), class: 'edit_questionnaire' do %>
            <i class="fas fa-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to admin_questionnaire_path(questionnaire), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete_questionnaire' do %>
              <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <%end%>    
  </tbody>
</table>
<%#= paginate @questionnaires,  window:1,  remote: true %>
<%= paginate @questionnaires,  window:1 %>