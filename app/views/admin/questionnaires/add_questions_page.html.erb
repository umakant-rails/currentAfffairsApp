<div class="row">
  <div class="question-form-title col-md-12"><center> Add  Questions In Questionnaire</center></div>
  <div class="clear form-title-divider col-md-12"></div>
</div>
<div class="row">
  <div class="col-lg-3 px-0">
    <%= select_tag 'questionnaire_id', options_from_collection_for_select(@questionnaires, "id", "name"), :prompt => "Select Questionnaire", class:"form-control" %>
  </div>
  <div class="col-lg-3 px-0">
    <%= select_tag "question_categories", options_from_collection_for_select(@que_categories, "id", "name"),
      prompt: "Select Category", class:"form-control", id: "questionCategory" %>
  </div>
  <div class="col-lg-2 txt-question-count">
    Added Ques : <span id="added-question-count" data-count="">0</span>
  </div>
  <div class="col-lg-2 txt-question-count">
    Selected Ques : <span id="selected-question-count" data-count="">0</span>
  </div>
  <div class="col-lg-2 px-0">
    <input type="button" id="add_questions" value="Add Questions" class="btn btn-primary form-control"/>
  </div>
</div>
<div class="row" id="questionnaire-question-list">
  <%= render "questionnaire_question_list", questions: @questions %>
</div>
