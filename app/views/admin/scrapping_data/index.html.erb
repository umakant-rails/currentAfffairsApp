<div class="modal" id="myModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Facts</h4>
        <div class="col-sm-1"></div>
        <div class="col-sm-9">
          <%= select_tag "scrapping_source", options_for_select(scrapping_data_sources_arry), prompt: "Select Scrapping Source", class:"form-control", id: "input-scrapping-source" %>
        </div>
        <button type="button" class="close clear-content" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <div class="form-group row">
          <div class="col-md-11">
            <input type="text" id="fact-input" class="form-control" data-id="" value=""/>  
          </div>
          <div class="col-md-1">
            <i class="far fa-check-circle right-ok-sign"></i>
          </div>
        </div>
        <div id="question-facts">
        </div>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger clear-content" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="row scrapping-row">
  <div class="col-md-4">
    <%= select_tag "scrapping_source", options_for_select(scrapping_data_sources_arry), prompt: "Select Scrapping Source", class:"form-control", id: "scrapping_source" %>
  </div>
  <div class="col-md-4">
    <input type="text" placeholder="<%= Time.now.strftime('%0d/%m/%Y') %>" class="form-control datetimepicker-input" id="datetimepicker" data-toggle="datetimepicker" data-target="#datetimepicker"/>
  </div>
  <div class="col-md-4">
    <button class="btn btn-primary fetch-btn" id="fetch_data">
      CA Fetch
    </button>
  </div>
</div>
<div class="row clear form-title-divider"></div>
<div id="scrapping-data">
  <div class="no-data col-lg-6 offset-lg-3">There is available no data now.</div>
</div>
<script type="text/javascript">
  $(function () {
    $('#datetimepicker').datetimepicker({
      locale: 'EN', format: 'DD/MM/YYYY'
    });
  });
</script>