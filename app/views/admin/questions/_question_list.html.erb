<table class="table table-sm">
  <thead>
    <tr style="width: 100%">
      <th scope="col" style="width: 5%">#</th>
      <th scope="col" style="width: 51%">Question</th>
      <th scope="col" style="width: 36%">Questionnaire</th>
      <th scope="col" style="width: 8%">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if questions.present? %>
      <% questions.each_with_index do | question, index | %>
        <tr class="rows-txt">
          <th scope="row">
            <%= get_question_index(page, index) %>
          </th>
          <td>
            <%= link_to admin_question_path(question), class: "title-txt" do %>
              <%= question.question.truncate(150) %>
            <% end %>
          </td>
          <td>
            <%= question.questionnaires.present? ? question.questionnaires[0].name : '' %>
          </td>
          <td>
            <%= link_to admin_question_path(question) do %>
              <i class="fas fa-eye" aria-hidden="true"></i>
            <% end %>
            <%= link_to edit_admin_question_path(question), class: 'edit_questionnaire' do %>
              <i class="fas fa-edit" aria-hidden="true"></i>
            <% end %>
            <%= link_to admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete_questionnaire' do %>
                <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='4'>
          <center>There is no data now.</center>
        </td>
      </tr>
    <%end%>    
  </tbody>
</table>
<%= paginate questions,  window:1,  remote: true %>