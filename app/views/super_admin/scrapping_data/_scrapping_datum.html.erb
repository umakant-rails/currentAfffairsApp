<% scrapping_data.present? && scrapping_data.each_with_index do | scrapping_datum, index | %>
  <% if action_name == "unread" || action_name == "hold" %>
    <div class="scrapping-datum" id="scrap-data-<%= scrapping_datum.id %>">
      <div class="index-label"><%= format('%02d', index+1) %></div>
   <% else %>
    <div class="scrapping-datum">
  <% end %>
    <div class="row">
      <div class='data-title'> <%= raw scrapping_datum[:title] %> </div>
      <div class='data-point'> <%= raw scrapping_datum[:description] %> </div>
      <% if(scrapping_datum[:keypoints].present? && scrapping_datum[:keypoints].length > 0)%>
        <div class='data-title'>Keypoints : </div>
        <div class='data-point'> <%= raw scrapping_datum[:keypoints] %> </div>
      <% end %>
    </div>
    <% if action_name == "unread" %>
      <div class="row">
        <input type="button" data-id= "<%= scrapping_datum.id %>" value="Mark As Hold" class="btn btn-primary mark-as-hold"> &nbsp;
        <input type="button" data-id= "<%= scrapping_datum.id %>" value="Mark As Read" class="btn btn-primary mark-as-read">
      </div>
    <% elsif action_name == "hold" %>
      <input type="button" data-id= "<%= scrapping_datum.id %>" value="Mark As Un-Hold" class="btn btn-primary mark-as-unhold">
      <input type="button" data-id= "<%= scrapping_datum.id %>" value="Mark As Read" class="btn btn-primary mark-as-read">
    <% end %>
  </div>
<% end %>

<%if links_arry.present? %>
  <div class="scrapping-datum">
    <div class="row data-title">
      There is data not available for selected date, That's Why please select any one link and Fetch data.
    </div>
    <div class="row clear form-title-divider"></div>
    <% links_arry[0..10].each_with_index do | link, index |%>
      <div class="row data-point">
        <div class="col-md-10" id="label<%=index%>">
          <%= link %>
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary" id="link-fetch-btn" data-id="<%= index %>">
            CA Fetch
          </button>
        </div>
      </div>
      <div class="row clear form-title-divider"></div>
    <% end %>
  </div>
<% end %>