    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="first">
  <% if !current_page.first? %>
  <%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, remote: remote %>
  <% else %>
